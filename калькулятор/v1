#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <pthread.h>

#define sh 5
#define be 3
//#define lo 1


void *print_shop( void *args)
{
    printf("I am shop\n");
}

void *print_loader(void *args)
{
    printf("I am loader\n");
}

void *print_buyer(void *args)
{
    printf("I am loader\n");
}

int main()
{
    srand(time(NULL));
    int shop[sh];
    int loader =200;
    pthread_t thread1[3];
    pthread_t thread2;
    int i=0;


    for( i=0; i<sh;i++)
        {
            shop[i]=900+rand()%201;
            //printf("i=%d\n",shop[i]);

        }
        for(i=0;i<3;i++)
        {
            pthread_create(&thread1[i],NULL,*print_buyer,NULL);
        }

        pthread_create(&thread2,NULL,print_loader,NULL);

        for(i=0;i<3;i++)
        {
            pthread_join(thread1[i],NULL);
        }

        pthread_join(thread2,NULL);

}
